@model RegisterViewModel

@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<form asp-action="Register" method="post" role="form" class="splash-container">

    <div class="card">
        <div class="card-header">
            <h3 class="mb-1">@SharedLocalizer.GetString("RegistrationForm")</h3>
            <p>@SharedLocalizer.GetString("EnterYourUserInfo")</p>
        </div>
        <div class="card-body">
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>

            <div class="form-group">
                <input asp-for="Name" class="form-control form-control-lg" type="text" name="name" required="" placeholder="@SharedLocalizer.GetString("Name")" autocomplete="off">
            </div>
            <div class="form-group">
                <input asp-for="Surname" class="form-control form-control-lg" type="text" name="surname" required="" placeholder="@SharedLocalizer.GetString("Surname")" autocomplete="off">
            </div>
            <div class="form-group">
                <input asp-for="Email" class="form-control form-control-lg" type="email" name="email" required="" placeholder="@SharedLocalizer.GetString("Email")" autocomplete="off">
            </div>
            <div class="form-group">
                <input asp-for="Password" class="form-control form-control-lg" id="pass1" type="password" required="" placeholder="@SharedLocalizer.GetString("Password")">
            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" class="form-control form-control-lg" required="" placeholder="@SharedLocalizer.GetString("PasswordConfirm")">
            </div>
            <div class="form-group pt-2">
                <button class="btn btn-block btn-primary" type="submit">@SharedLocalizer.GetString("RegisterMyAccount")</button>
            </div>
            <div class="form-group">
                <label class="custom-control custom-checkbox">
                    <input class="custom-control-input" type="checkbox" required><span class="custom-control-label">@SharedLocalizer.GetString("RegistrationAggrement")</span>
                </label>
            </div>
            @*<div class="form-group row pt-0">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 mb-2">
                        <button class="btn btn-block btn-social btn-facebook " type="button">Facebook</button>
                    </div>
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <button class="btn  btn-block btn-social btn-twitter" type="button">Twitter</button>
                    </div>
                </div>*@
        </div>
        <div class="card-footer bg-white">
            <p>@SharedLocalizer.GetString("AllreadyMember")<a asp-controller="Account" asp-action="Login" class="text-secondary"> @SharedLocalizer.GetString("LoginHere")</a></p>
        </div>
    </div>
</form>