@model ForgotPasswordViewModel

@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="splash-container">
    <div class="card">
        <div class="card-header text-center"><img class="logo-img" src="../assets/images/logo.png" alt="logo"><span class="splash-description">@SharedLocalizer.GetString("EnterYourUserInfo")</span></div>
        <div class="card-body">
            <form asp-action="ForgotPassword" asp-controller="Account" method="post" role="form">
                <div asp-validation-summary="All" class="text-danger"></div>

                <p>Don't worry, we'll send you an email to reset your password.</p>
                <div class="form-group">
                    <input asp-for="Email" class="form-control form-control-lg" type="email" name="email" required="" placeholder="@SharedLocalizer.GetString("Email")" autocomplete="off">
                </div>
                <div class="form-group pt-1"><button type="submit" class="btn btn-block btn-primary btn-xl">@SharedLocalizer.GetString("ResetPassword")</button></div>
            </form>
        </div>
        <div class="card-footer text-center">
            <span>@SharedLocalizer.GetString("DontYouHaveAccount")<a asp-controller="Account" asp-action="Register" class="text-secondary">@SharedLocalizer.GetString("SignUp")</a></span>
        </div>
    </div>
</div>