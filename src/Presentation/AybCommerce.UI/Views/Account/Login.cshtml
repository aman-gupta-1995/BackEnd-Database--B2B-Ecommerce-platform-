@model LoginViewModel

@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="splash-container">
    <div class="card ">
        <div class="card-header text-center">
            <a asp-action="Index" asp-controller="Home"><img class="logo-img" src="~/assets/images/logo.png" alt="logo"></a>
            <span class="splash-description">@SharedLocalizer.GetString("EnterYourUserInfo")</span>
        </div>
        <div class="card-body">
            <form asp-action="Login" method="post" role="form">
                <div class="form-group">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="form-group">
                    <input asp-for="UserName" class="form-control form-control-lg" id="username" type="email" placeholder="@SharedLocalizer.GetString("Email")" required="" autocomplete="off">
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control form-control-lg" id="password" type="password" required="" placeholder="@SharedLocalizer.GetString("Password")">
                </div>
                <div class="form-group">
                    <label class="custom-control custom-checkbox">
                        <input class="custom-control-input" type="checkbox"><span class="custom-control-label">@SharedLocalizer.GetString("RememberMe")</span>
                    </label>
                </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block">@SharedLocalizer.GetString("SignIn")</button>
            </form>
        </div>
        <div class="card-footer bg-white p-0">
            <div class="card-footer-item card-footer-item-bordered">
                <a asp-controller="Account" asp-action="Register" class="footer-link">@SharedLocalizer.GetString("CreateAnAccount")</a>
            </div>
            <div class="card-footer-item card-footer-item-bordered">
                <a asp-controller="Account" asp-action="ForgotPassword" class="footer-link">@SharedLocalizer.GetString("ForgotPassword")</a>
            </div>
        </div>
    </div>
</div>
