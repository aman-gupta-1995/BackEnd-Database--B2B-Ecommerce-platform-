@model ResetPasswordViewModel

@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}


<div class="splash-container">
    <div class="card ">
        <div class="card-header text-center">
            <a asp-action="Index" asp-controller="Home"><img class="logo-img" src="~/assets/images/logo.png" alt="logo"></a>
            <span class="splash-description">@SharedLocalizer.GetString("EnterYourUserInfo")</span>
        </div>
        <div class="card-body">
            <form asp-action="ResetPassword" asp-controller="Account" method="post" role="form">
                <div class="form-group">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="form-group">
                    <input asp-for="Email" class="form-control form-control-lg" id="email" type="email" placeholder="@SharedLocalizer.GetString("Email")" required="" autocomplete="off">
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control form-control-lg" id="password" type="password" required="" placeholder="@SharedLocalizer.GetString("Password")">
                </div>
                <div class="form-group">
                    <input asp-for="ConfirmPassword" class="form-control form-control-lg" id="confirmpassword" type="password" required="" placeholder="@SharedLocalizer.GetString("PasswordConfirm")">
                </div>
                <input asp-for="Code" type="hidden" />
                <button type="submit" class="btn btn-primary btn-lg btn-block">@SharedLocalizer.GetString("SignIn")</button>
            </form>
        </div>
        <div class="card-footer bg-white p-0">
            <div class="card-footer-item card-footer-item-bordered">
                <a asp-controller="Account" asp-action="Register" class="footer-link">@SharedLocalizer.GetString("CreateAnAccount")</a>
            </div>
            <div class="card-footer-item card-footer-item-bordered">
                <a asp-controller="Account" asp-action="Login" class="footer-link">@SharedLocalizer.GetString("EnterYourUserInfo")</a>
            </div>
        </div>
    </div>
</div>